<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000847"
    android:orientation="vertical"
    tools:ignore="ExtraText">

    <!-- Top App Bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#000847"
        android:padding="16dp">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:contentDescription="Back"
            android:src="@drawable/arrow_back_icon"
            app:tint="@android:color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="News &amp; Notifications"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- Scrollable Notification List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!--        <LinearLayout-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:orientation="vertical"-->
        <!--            android:layout_marginBottom="16dp">-->

        <!-- Repeat this Card for each Notification -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/news"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="300dp"
                android:text="សេចក្តីជូនដំណឹង"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="គណៈគ្រប់គ្រងសាកលវិទ្យាល័យភូមិន្ទភ្នំពេញ សូមជម្រាបជូនដំណឹងដល់សាស្ត្រាចារ្យ និងនិស្សិតទាំងអស់ឱ្យបានជ្រាបថា សាកលវិទ្យាល័យភូមិន្ទភ្នំពេញនឹងយកថ្នាក់រៀនធ្វើជាមណ្ឌលប្រឡងសម្រាប់ការប្រឡងថ្នាក់ជាតិចូលរៀនថ្នាក់ឆ្នាំសិក្សាមូលដ្ឋាន សម្រាប់កម្រិតបរិញ្ញាបត្រនៅតាមគ្រឹះស្ថានបណ្តុះបណ្តាលវិស័យសុខាភិបាល សម្រាប់ឆ្នាំសិក្សា២០២៤-២០២៥ ដែលនឹងប្រព្រឹត្តទៅចាប់ពីថ្ងៃទី១-២ ខែមីនា ឆ្នាំ២០២៥ នៅសាកលវិទ្យាល័យភូមិន្ទភ្នំពេញ។ ដូច្នេះសាស្ត្រាចារ្យ និងនិស្សិតទាំងអស់ត្រូវបានឈប់សម្រាកចាប់ពីវេនយប់ថ្ងៃសុក្រ ទី២៨ ខែកុម្ភៈ រហូតដល់ថ្ងៃអាទិត្យ ទី២ ខែមីនា ឆ្នាំ២០២៥។"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="8dp"
                android:text="04/01/2025"
                android:textColor="#666666"
                android:textSize="15dp" />
        </LinearLayout>

        <!-- Duplicate above LinearLayout for more notifications -->

        <!--        </LinearLayout>-->
    </ScrollView>
</LinearLayout>
